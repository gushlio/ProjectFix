<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zoo Bazar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ZooBazarWEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Zoo Bazar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (Context.Session.GetString("role") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/sub-page/Login">Login</a>
                            </li>
                        }
                        @if (Context.Session.GetString("role") == "Admin")
                        {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/Administration">Admin</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/AnimalCare">Zoo_Vet</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/Landing-page">Home_Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/Task">Tasks</a>
                                </li>
                                <form method="post" asp-page-handler="Logout" asp-page="/Index" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>

                        }
                        @if (Context.Session.GetString("role") == "Customer")
                        {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/Reports">Reports</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/TicketVender">Tickets</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/sub-page/ZooMap">ZooMap</a>
                                </li>
                                <form method="post" asp-page-handler="Logout" asp-page="/Index" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                         }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Zoo Bazar - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>